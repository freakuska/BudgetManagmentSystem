<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budget_management_system">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetManagementSystem">

        <!-- Main Activities -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- Transaction Activities -->
        <activity
            android:name=".AddTransactionActivity"
            android:exported="false"
            android:label="@string/add_transaction" />

        <activity
            android:name=".TransactionsActivity"
            android:exported="false"
            android:label="@string/transactions" />

        <activity
            android:name=".TransactionDetailActivity"
            android:exported="false"
            android:label="@string/transaction_detail" />

        <!-- Tag Activities -->
        <activity
            android:name=".TagsActivity"
            android:exported="false"
            android:label="@string/tags" />

        <!-- Profile Activities -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/profile" />

    </application>

</manifest>